{
  "name": "open-balena-vpn",
  "private": true,
  "version": "9.17.1",
  "description": "RESTful VPN api",
  "license": "AGPL-3.0",
  "scripts": {
    "build": "tsc --project .",
    "check": "tsc --pretty --noEmit --diagnostics --project ./tsconfig.json",
    "check:dev": "tsc --pretty --noEmit --diagnostics --project ./tsconfig.dev.json",
    "lint": "balena-lint --typescript src/ test/ typings/",
    "lint:fix": "balena-lint --typescript --fix src/ test/ typings/",
    "pretest-unit": "npm run lint",
    "test-unit": "mocha test/index.ts",
    "test": "docker build -t test-balena-vpn . && IMAGE_NAME=test-balena-vpn ./automation/test.sh"
  },
  "dependencies": {
    "@balena/node-metrics-gatherer": "^5.7.3",
    "@sentry/node": "^5.26.0",
    "bluebird": "^3.7.2",
    "compression": "^1.7.4",
    "event-stream": "^4.0.1",
    "eventemitter3": "^4.0.7",
    "express": "^4.17.1",
    "lodash": "^4.17.20",
    "memoizee": "^0.4.14",
    "morgan": "^1.10.0",
    "netmask": "^1.0.6",
    "node-tunnel": "^4.0.0",
    "pinejs-client-request": "^7.2.2",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "source-map-support": "^0.5.19",
    "telnet-openvpn": "^0.1.9",
    "typed-error": "^3.2.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@balena/lint": "^5.2.1",
    "@types/bluebird": "^3.5.32",
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.3",
    "@types/compression": "^1.7.0",
    "@types/event-stream": "^3.3.34",
    "@types/express": "^4.17.8",
    "@types/lodash": "^4.14.162",
    "@types/memoizee": "^0.4.4",
    "@types/mocha": "^8.0.3",
    "@types/morgan": "^1.9.1",
    "@types/netmask": "^1.0.30",
    "@types/nock": "^11.1.0",
    "@types/node": "^14.14.5",
    "@types/request-promise": "^4.1.46",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.1",
    "mocha": "^8.1.3",
    "nock": "^13.0.4",
    "openvpn-client": "0.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "*.ts": [
      "balena-lint --typescript --fix"
    ]
  },
  "mocha": {
    "bail": true,
    "reporter": "spec",
    "require": "ts-node/register/transpile-only",
    "exit": true
  }
}
