{
  "name": "open-balena-vpn",
  "private": true,
  "version": "8.7.0",
  "description": "RESTful VPN api",
  "license": "AGPL-3.0",
  "scripts": {
    "build": "tsc --project .",
    "check": "tsc --pretty --noEmit --diagnostics --project ./tsconfig.json",
    "check:dev": "tsc --pretty --noEmit --diagnostics --project ./tsconfig.dev.json",
    "lint": "resin-lint --typescript src/ test/ typings/",
    "lint:fix": "prettier --config ./node_modules/resin-lint/config/.prettierrc --write \"{src,test,typings}/**/*.ts\"",
    "pretest-unit": "npm run lint",
    "test-unit": "mocha test/index.ts",
    "test": "docker build -t test-balena-vpn . && IMAGE_NAME=test-balena-vpn ./automation/test.sh"
  },
  "dependencies": {
    "@types/bluebird": "^3.5.26",
    "@types/body-parser": "^1.17.0",
    "@types/compression": "^0.0.36",
    "@types/express": "^4.16.1",
    "@types/forever-monitor": "^1.7.4",
    "@types/lodash": "^4.14.122",
    "@types/morgan": "^1.7.35",
    "@types/netmask": "^1.0.30",
    "@types/node": "^10.12.29",
    "@types/raven": "^2.5.3",
    "@types/request-promise": "^4.1.42",
    "basic-auth-parser": "0.0.2",
    "block-queue": "~0.0.2",
    "bluebird": "^3.5.3",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "event-stream": "3.3.4",
    "express": "^4.16.4",
    "forever-monitor": "^1.7.1",
    "lodash": "^4.17.11",
    "middleware-handler": "^0.2.0",
    "morgan": "^1.9.1",
    "netmask": "^1.0.6",
    "node-tunnel": "^2.1.0",
    "pinejs-client-request": "^5.1.0",
    "raven": "^2.6.4",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "tmp": "^0.0.33",
    "typed-error": "^3.0.2",
    "typescript": "^3.3.3333",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.6",
    "@types/nock": "^9.3.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "mocha": "^6.0.2",
    "nock": "^10.0.6",
    "openvpn-client": "0.0.2",
    "resin-lint": "^3.0.1",
    "ts-node": "^6.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --config ./node_modules/resin-lint/config/.prettierrc --write",
      "resin-lint --typescript",
      "git add"
    ]
  }
}
