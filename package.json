{
  "name": "open-balena-vpn",
  "private": true,
  "version": "9.13.1",
  "description": "RESTful VPN api",
  "license": "AGPL-3.0",
  "scripts": {
    "build": "tsc --project .",
    "check": "tsc --pretty --noEmit --diagnostics --project ./tsconfig.json",
    "check:dev": "tsc --pretty --noEmit --diagnostics --project ./tsconfig.dev.json",
    "lint": "balena-lint --typescript src/ test/ typings/",
    "lint:fix": "balena-lint --typescript --fix src/ test/ typings/",
    "pretest-unit": "npm run lint",
    "test-unit": "mocha test/index.ts",
    "test": "docker build -t test-balena-vpn . && IMAGE_NAME=test-balena-vpn ./automation/test.sh"
  },
  "dependencies": {
    "@balena/node-metrics-gatherer": "^5.2.1",
    "@sentry/node": "^5.15.4",
    "block-queue": "^0.0.2",
    "bluebird": "^3.7.2",
    "compression": "^1.7.4",
    "event-stream": "^4.0.1",
    "eventemitter3": "^4.0.0",
    "express": "^4.17.1",
    "lodash": "^4.17.15",
    "memoizee": "^0.4.14",
    "middleware-handler": "^0.2.0",
    "morgan": "^1.10.0",
    "netmask": "^1.0.6",
    "node-tunnel": "^4.0.0",
    "pinejs-client-request": "^6.1.1",
    "request": "^2.88.2",
    "request-promise": "^4.2.5",
    "source-map-support": "^0.5.16",
    "telnet-openvpn": "^0.1.9",
    "tmp": "^0.1.0",
    "typed-error": "^3.2.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@balena/lint": "^5.0.2",
    "@types/bluebird": "^3.5.30",
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/compression": "^1.7.0",
    "@types/event-stream": "^3.3.34",
    "@types/express": "^4.17.4",
    "@types/lodash": "^4.14.149",
    "@types/memoizee": "^0.4.3",
    "@types/mocha": "^7.0.2",
    "@types/morgan": "^1.9.0",
    "@types/netmask": "^1.0.30",
    "@types/nock": "^11.1.0",
    "@types/node": "^12.12.34",
    "@types/request-promise": "^4.1.46",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.2",
    "mocha": "^7.1.1",
    "nock": "^12.0.3",
    "openvpn-client": "0.0.2",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "*.ts": [
      "balena-lint --typescript --fix"
    ]
  }
}
