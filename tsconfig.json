{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2017",
		"strict": true,
		"noErrorTruncation": true,
		"noImplicitAny": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"preserveConstEnums": true,
		"allowJs": false,
		"removeComments": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"outDir": "build/"
	},
	"include": [
		"src/**/*.ts",
		"typings/**/*.d.ts"
	],
	"exclude": [
		"node_modules"
	]
}
