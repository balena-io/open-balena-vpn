[Unit]
After=confd.service
Before=open-balena-vpn.service
Requires=confd.service

[Service]
# Increase the number of sockets haproxy is able to use
LimitNOFILE=1048576
# Avoid an issue with failing to mount namespaces
BindReadOnlyPaths=
EnvironmentFile=/usr/src/app/config/env
# FIXME? https://bugzilla.redhat.com/show_bug.cgi?id=1875056#c1
# wait for open-balena-vpn master to exit and then kill systemd/init
ExecStop=-/bin/bash -c 'set -x; while curl -sfo/dev/null localhost:8080/ping; do sleep $(( (RANDOM % 3) + 3 ))s; done; /usr/bin/systemctl kill init.scope'
TimeoutStopSec={{getenv "DEFAULT_SIGTERM_TIMEOUT" "120"}}
